{
    "name": "hostgator-wordpress-plugin",
    "description": "WordPress plugin that integrates your WordPress site with the HostGator control panel, including performance, security, and update features.",
    "license": "GPL-2.0-or-later",
    "version": "0.9.0",
    "private": true,
    "author": {
        "name": "Evan Mullins",
        "email": "evanrm@gmail.com"
    },
    "devDependencies": {
        "@testing-library/cypress": "^8.0.2",
        "@wordpress/env": "^4.1.3",
        "@wordpress/scripts": "^19.2.2",
        "cypress": "^9.1.0",
        "cypress-axe": "^0.13.0"
    },
    "scripts": {
        "build": "wp-scripts build",
        "check-engines": "wp-scripts check-engines",
        "check-licenses": "wp-scripts check-licenses --production",
        "develop": "npm run start",
        "develop:analyzer": "npm run start:analyzer",
        "lint:css": "wp-scripts lint-style '**/*.css'",
        "lint:js": "wp-scripts lint-js ./src",
        "lint:js:fix": "wp-scripts lint-js ./src --fix",
        "lint:pkg-json": "wp-scripts lint-pkg-json",
        "lint:yml": "yamllint --ignore=node_modules/** --ignore=vendor/** **/*.yml",
        "i18n": "wpi18n addtextdomain && composer run i18n",
        "start": "NODE_ENV=develop wp-scripts start",
        "start:analyzer": "npm run start --webpack-bundle-analyzer",
        "storybook:dev": "start-storybook -c ./storybook",
        "storybook:build": "build-storybook -c ./storybook -o ./.docs",
        "test:e2e": "npx cypress run",
        "test:unit": "wp-scripts test-unit-js",
        "create:dist": "rsync -r --exclude-from=.distignore . ./hostgator-wordpress-plugin",
        "php-deps": "composer install --no-dev --optimize-autoloader",
        "create:zip": "cd ./hostgator-wordpress-plugin && zip -r -9 ../hostgator-wordpress-plugin.zip . && ls -lh ../hostgator-wordpress-plugin.zip",
        "simulate-runner-build": "rm -rf ./hostgator-wordpress-plugin ./hostgator-wordpress-plugin.zip ./vendor && npm i && npm run build && npm run php-deps && npm run create:dist && npm run create:zip"
    },
    "dependencies": {
        "@wordpress/a11y": "^2.5.1",
        "@wordpress/compose": "^5.0.6",
        "@wordpress/dom": "^2.6.0",
        "@wordpress/dom-ready": "^2.5.1",
        "@wordpress/element": "^2.8.2",
        "@wordpress/i18n": "^3.6.1",
        "@wordpress/icons": "^6.1.1",
        "@wordpress/keycodes": "^2.6.2",
        "classnames": "^2.2.6",
        "jquery": "^3.5.1",
        "lodash": "^4.17.21",
        "react": "^16.9.0",
        "react-error-boundary": "^3.1.1",
        "react-router-dom": "^6.0.2",
        "react-use": "^17.3.1"
    }
}
